<resources>

    <!-- Base application theme -->
    <style name="Theme.Assignment2.styles" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#6200EE</item>
        <item name="colorPrimaryVariant">#3700B3</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">#03DAC6</item>
        <item name="colorOnSecondary">#000000</item>
        <item name="android:statusBarColor">#3700B3</item>
    </style>

    <!-- Style for Calculator buttons -->
    <style name="CalcButton">>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">#4F4F4F</item> <!-- Grey background -->
        <item name="android:textColor">#03A9F4</item> <!-- White text -->
        <item name="android:textSize">24sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <!-- Style for Special buttons (AC, %, etc.) -->
    <style name="SpecialCalcButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">#4F4F4F</item> <!-- Grey background -->
        <item name="android:textColor">@android:color/holo_orange_dark</item> <!-- Orange text -->
        <item name="android:textSize">24sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <!-- Style for Equal button -->
    <style name="EqualCalcButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@android:color/holo_orange_dark</item> <!-- Orange background -->
        <item name="android:textColor">#FFFFFF</item> <!-- White text -->
        <item name="android:textSize">24sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_margin">4dp</item>
    </style>

</resources>
